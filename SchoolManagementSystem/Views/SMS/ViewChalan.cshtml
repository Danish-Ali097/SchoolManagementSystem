
@{
     Layout = null;
}
@using SchoolManagementSystem.Models
@model IEnumerable<SchoolManagementSystem.Models.ParentFeeModel>

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Dashboard | Welcome</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/Content/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="~/Content/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark scrolling-navbar" style="background:#24355C;">
        <div class="container">
            <a href="#" class="navbar-brand">School Management System</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar" aria-controls="Navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="Navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Dashboard", "StudentDashboard", "SMS", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "SMS", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "SMS", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Chalan", "ViewChalan", "SMS", new { @class = "nav-link" })
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            @{
                                var data = (Student)ViewData["student"];
                            }

                            @data.Std_Name
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-default"
                             aria-labelledby="navbarDropdownMenuLink-333">
                            @Html.ActionLink("Change Password", "StudentChangePassword/" + data.Id, "SMS", new { @class = "dropdown-item" })
                            <a class="dropdown-item" href="/SMS/StudentLogout"><i class="fas fa-sign-out-alt mr-1"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <!-- table-section -->

        <section>
            <div class="col-md-12 col-lg-10 m-auto" style="height:400px; max-height:400px; overflow:auto">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Student.Std_Name)</th>
                            <th>@Html.DisplayNameFor(m => m.Student.Reg_No)</th>
                            <th>@Html.DisplayNameFor(m => m.Fee.Total_Fee)</th>
                            <th>@Html.DisplayNameFor(m => m.Fee.Due_Date)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Student.Std_Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Student.Reg_No)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fee.Total_Fee)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fee.Due_Date)</td>
                                <td>@Html.ActionLink("Download Chalan","SaveChalan/"+item.Fee.Id,"SMS")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>

        <!-- table section/ -->

        <footer class="page-footer unique-color-dark">
            <!-- Social buttons -->
            <div class="primary-color">
                <div class="container">
                    <!--Grid row-->
                    <div class="row py-4 d-flex align-items-center">

                        <!--Grid column-->
                        <div class="col-md-6 col-lg-5 text-center text-md-left mb-4 mb-md-0">
                            <h6 class="mb-0 white-text">Get connected with us on social networks!</h6>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6 col-lg-7 text-center text-md-right">
                            <!--Facebook-->
                            <a class="fb-ic ml-0">
                                <i class="fab fa-facebook-f white-text mr-4"> </i>
                            </a>
                            <!--Twitter-->
                            <a class="tw-ic">
                                <i class="fab fa-twitter white-text mr-4"> </i>
                            </a>
                            <!--Google +-->
                            <a class="gplus-ic">
                                <i class="fab fa-google-plus-g white-text mr-4"> </i>
                            </a>
                            <!--Linkedin-->
                            <a class="li-ic">
                                <i class="fab fa-linkedin-in white-text mr-4"> </i>
                            </a>
                            <!--Instagram-->
                            <a class="ins-ic">
                                <i class="fab fa-instagram white-text mr-lg-4"> </i>
                            </a>
                        </div>
                        <!--Grid column-->

                    </div>
                    <!--Grid row-->
                </div>
            </div>
            <!-- Social buttons -->
            <div class="container-fluid mt-5 mb-4 text-center text-md-left">
                <div class="row mt-3 d-flex justify-content-around">
                    <div class="col-md-4">
                        <h6 class="text-uppercase font-weight-bold">
                            <strong>Company name</strong>
                        </h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            Here you can use rows and columns here to organize your footer content. Lorem ipsum dolor sit
                            amet, consectetur adipisicing elit.
                        </p>
                    </div>
                    <hr class="clearfix w-100 d-md-none pb-3">
                    <div class="col-md-4">
                        <h6 class="text-uppercase font-weight-bold">
                            <strong>Company name</strong>
                        </h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            Here you can use rows and columns here to organize your footer content. Lorem ipsum dolor sit
                            amet, consectetur adipisicing elit.
                        </p>
                    </div>
                    <hr class="clearfix w-100 d-md-none pb-3">
                    <!--Fourth column-->
                    <div class="col-md-2">
                        <h6 class="text-uppercase font-weight-bold">
                            <strong>Contact</strong>
                        </h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            <i class="fas fa-home  mr-3"></i> New York, NY 10012, US
                        </p>
                        <p>
                            <i class="fas fa-envelope mr-3"></i> info@example.com
                        </p>
                        <p>
                            <i class="fas fa-phone mr-3"></i> + 01 234 567 88
                        </p>
                        <p>
                            <i class="fas fa-print mr-3"></i> + 01 234 567 89
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/Scripts/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/Scripts/mdb.min.js"></script>
    <!-- Validation Script -->
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- User Script -->
    <!-- Sidebar toggle-->
    <script>
        $("#sidebar-toggler").click(function () {
            console.log("click event called");
            $("#side-bar").toggleClass("sidebar-toggle");
            $("#main-content").toggleClass("maincontent-toggle");
        })
    </script>
</body>
</html>
