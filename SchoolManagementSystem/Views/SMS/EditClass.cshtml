
@{
    Layout = null;
}
@using SchoolManagementSystem.Models
@model SchoolManagementSystem.Models.Class

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Dashboard | Add Student</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/Content/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="~/Content/style.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div id="side-bar">
                @* sidenav *@
                <div class="grey darken-4 m-0 h-100">
                    <div class="list-group-item white-text text-center blue-gradient" style="background:#24355C;">
                        <div class="display-4">
                            <strong>SMS</strong>
                        </div>
                        <sub>School Management System</sub>
                    </div>
                    <div class="list-group">
                        <!-- list item1 -->
                        <a data-toggle="collapse" href="#sublist1" aria-expanded="false" aria-controls="sublist1" class="list-group-item grey darken-3 white-text list-group-item-action d-flex justify-content-between flex-wrap">
                            <i class="fas fa-graduation-cap"></i>
                            Student
                            <i class="fas fa-caret-down"></i>
                        </a>
                        <div class="collapse list-group-flush black w-100 mr-0" id="sublist1">
                            <a href="/SMS/AddStudent" class="list-group-item list-group-item-action grey darken-4 white-text">Add Student</a>
                            <a href="/SMS/GetStudent" class="list-group-item list-group-item-action grey darken-4 white-text">View Student</a>
                        </div>
                        <!-- list item1/ -->
                        <!-- list item2 -->
                        <a data-toggle="collapse" href="#sublist2" aria-expanded="false" aria-controls="sublist2" class="list-group-item grey darken-3 white-text list-group-item-action d-flex justify-content-between flex-wrap">
                            <i class="fas fa-chalkboard-teacher"></i>
                            Classes
                            <i class="fas fa-caret-down"></i>
                        </a>
                        <div class="collapse list-group-flush black w-100 mr-0" id="sublist2">
                            <a href="/SMS/AddClass" class="list-group-item list-group-item-action grey darken-4 white-text hover">Add Class</a>
                            <a href="/SMS/GetClass" class="list-group-item list-group-item-action grey darken-4 white-text">View Class</a>
                            <a href="/SMS/GenerateChallan" class="list-group-item list-group-item-action grey darken-4 white-text">Generate Fee</a>
                        </div>
                        <!-- list item2/ -->
                        <!-- list item3 -->
                        <a data-toggle="collapse" href="#sublist3" aria-expanded="false" aria-controls="sublist3" class="list-group-item grey darken-3 white-text list-group-item-action d-flex justify-content-between flex-wrap">
                            <i class="fas fa-book"></i>
                            Subject
                            <i class="fas fa-caret-down"></i>
                        </a>
                        <div class="collapse list-group black w-100 mr-0" id="sublist3">
                            <a href="/SMS/AddSubject" class="list-group-item list-group-item-action grey darken-4 white-text hover">Add Subject</a>
                            <a href="/SMS/ViewSubject" class="list-group-item list-group-item-action grey darken-4 white-text hover">View Subject</a>
                        </div>
                        <!-- list item3/ -->
                    </div>
                </div>
            </div>
            <div id="main-content">
                <nav class="navbar navbar-expand-lg navbar-dark scrolling-navbar" style="background:#24355C;">
                    <div class="container">
                        <a href="#" class="navbar-brand">School Management System</a>

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar" aria-controls="Navbar" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="Navbar">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    @Html.ActionLink("Dashboard", "AdminDashboard", "SMS", new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("About", "About", "SMS", new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Contact", "Contact", "SMS", new { @class = "nav-link" })
                                </li>
                            </ul>
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                                       aria-haspopup="true" aria-expanded="false">
                                        @{
                                            var data = (Admin)ViewData["admin"];
                                        }

                                        @data.Name
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-default"
                                         aria-labelledby="navbarDropdownMenuLink-333">
                                        <a class="dropdown-item" href="#">Action</a>
                                        <a class="dropdown-item" href="/SMS/AdminLogout"><i class="fas fa-sign-out-alt mr-1"></i>Logout</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <span class="p-2 rounded-circle blue-gradient" id="sidebar-toggler"> <i class="fas fa-arrow-right"></i> </span>

                <!-- form-section -->

                <section>
                    <h2 class="text-center display-4 mt-5 pt-3">Edit Class</h2>
                    <div class="col-md-12 col-lg-10 m-auto">
                        <form action="/SMS/EditClass" method="post">
                            @Html.HiddenFor(m => m.Id)
                            <div class="md-form">
                                @Html.TextBoxFor(m => m.Class_Name, new { @class = "form-control" })
                                @Html.LabelFor(m => m.Class_Name)
                                @Html.ValidationMessageFor(m => m.Class_Name, "", new { @class = "red-text ml-5" })
                            </div>
                            <div class="md-form">
                                @Html.TextBoxFor(m => m.Class_Strength, new { @class = "form-control" })
                                @Html.LabelFor(m => m.Class_Strength)
                                @Html.ValidationMessageFor(m => m.Class_Strength, "", new { @class = "red-text ml-5" })
                            </div>
                            <div class="md-form">
                                @Html.TextBoxFor(m => m.Designation, new { @class = "form-control" })
                                @Html.LabelFor(m => m.Designation)
                                @Html.ValidationMessageFor(m => m.Designation, "", new { @class = "red-text ml-5" })
                            </div>
                            <div class="md-form">
                                @Html.TextBoxFor(m => m.HomeRoomTeacher, new { @class = "form-control" })
                                @Html.LabelFor(m => m.HomeRoomTeacher)
                                @Html.ValidationMessageFor(m => m.HomeRoomTeacher, "", new { @class = "red-text ml-5" })
                            </div>
                            <div class="md-form">
                                @Html.TextBoxFor(m => m.Admission_Fee, new { @class = "form-control", @type = "number" })
                                @Html.LabelFor(m => m.Admission_Fee)
                                @Html.ValidationMessageFor(m => m.Admission_Fee, "", new { @class = "red-text ml-5" })
                            </div>
                            <div class="md-form">
                                @Html.TextBoxFor(m => m.Tuition_Fee, new { @class = "form-control", @type = "number" })
                                @Html.LabelFor(m => m.Tuition_Fee)
                                @Html.ValidationMessageFor(m => m.Tuition_Fee, "", new { @class = "red-text ml-5" })
                            </div>
                            <div class="md-form">
                                @Html.TextBoxFor(m => m.Exam_Fee, new { @class = "form-control", @type = "number" })
                                @Html.LabelFor(m => m.Exam_Fee)
                                @Html.ValidationMessageFor(m => m.Exam_Fee, "", new { @class = "red-text ml-5" })
                            </div>
                            <button type="submit" class="btn btn-primary">Update Class</button>
                        </form>
                    </div>
                </section>

                <!-- form section/ -->

                <footer class="page-footer unique-color-dark">
                    <!-- Social buttons -->
                    <div class="primary-color">
                        <div class="container">
                            <!--Grid row-->
                            <div class="row py-4 d-flex align-items-center">

                                <!--Grid column-->
                                <div class="col-md-6 col-lg-5 text-center text-md-left mb-4 mb-md-0">
                                    <h6 class="mb-0 white-text">Get connected with us on social networks!</h6>
                                </div>
                                <!--Grid column-->
                                <!--Grid column-->
                                <div class="col-md-6 col-lg-7 text-center text-md-right">
                                    <!--Facebook-->
                                    <a class="fb-ic ml-0">
                                        <i class="fab fa-facebook-f white-text mr-4"> </i>
                                    </a>
                                    <!--Twitter-->
                                    <a class="tw-ic">
                                        <i class="fab fa-twitter white-text mr-4"> </i>
                                    </a>
                                    <!--Google +-->
                                    <a class="gplus-ic">
                                        <i class="fab fa-google-plus-g white-text mr-4"> </i>
                                    </a>
                                    <!--Linkedin-->
                                    <a class="li-ic">
                                        <i class="fab fa-linkedin-in white-text mr-4"> </i>
                                    </a>
                                    <!--Instagram-->
                                    <a class="ins-ic">
                                        <i class="fab fa-instagram white-text mr-lg-4"> </i>
                                    </a>
                                </div>
                                <!--Grid column-->

                            </div>
                            <!--Grid row-->
                        </div>
                    </div>
                    <!-- Social buttons -->
                    <div class="container-fluid mt-5 mb-4 text-center text-md-left">
                        <div class="row mt-3 d-flex justify-content-around">
                            <div class="col-md-4">
                                <h6 class="text-uppercase font-weight-bold">
                                    <strong>Company name</strong>
                                </h6>
                                <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                                <p>
                                    Here you can use rows and columns here to organize your footer content. Lorem ipsum dolor sit
                                    amet, consectetur adipisicing elit.
                                </p>
                            </div>
                            <hr class="clearfix w-100 d-md-none pb-3">
                            <div class="col-md-4">
                                <h6 class="text-uppercase font-weight-bold">
                                    <strong>Company name</strong>
                                </h6>
                                <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                                <p>
                                    Here you can use rows and columns here to organize your footer content. Lorem ipsum dolor sit
                                    amet, consectetur adipisicing elit.
                                </p>
                            </div>
                            <hr class="clearfix w-100 d-md-none pb-3">
                            <!--Fourth column-->
                            <div class="col-md-2">
                                <h6 class="text-uppercase font-weight-bold">
                                    <strong>Contact</strong>
                                </h6>
                                <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                                <p>
                                    <i class="fas fa-home  mr-3"></i> New York, NY 10012, US
                                </p>
                                <p>
                                    <i class="fas fa-envelope mr-3"></i> info@example.com
                                </p>
                                <p>
                                    <i class="fas fa-phone mr-3"></i> + 01 234 567 88
                                </p>
                                <p>
                                    <i class="fas fa-print mr-3"></i> + 01 234 567 89
                                </p>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/Scripts/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/Scripts/mdb.min.js"></script>
    <!-- Validation Script -->
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- User Script -->
    <!-- Sidebar toggle-->
    <script>
        $("#sidebar-toggler").click(function () {
            console.log("click event called");
            $("#side-bar").toggleClass("sidebar-toggle");
            $("#main-content").toggleClass("maincontent-toggle");
        })
    </script>
</body>
</html>
